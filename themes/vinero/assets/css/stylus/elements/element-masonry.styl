/*!*********************************/
/*! Masonry
/**********************************/

$gutter = 15px

.masonry
	display block
	margin-left -($gutter)
	margin-right -($gutter)
	margin-bottom -($gutter * 2)

	.gutter-sizer
		width 0px

	.grid-sizer,
	.grid-item
		float left

	.grid-item
		padding 0 $gutter
		margin-bottom ($gutter * 2)

	.grid-item.w100
		width 100% !important

	&[data-masonry-col="1"]
		.grid-sizer,
		.grid-item
			width 100%

		.grid-item
			margin-bottom 50px

	&[data-masonry-col="2"]
		.grid-sizer,
		.grid-item
			width calc(100% * 1 / 2)

			@media (max-width: 767px)
				width 100%

	&[data-masonry-col="3"]
		.grid-sizer,
		.grid-item
			width calc(100% * 1 / 3)

			@media (max-width: 991px)
				width calc(100% * 1 / 2)

			@media (max-width: 767px)
				width 100%
/*! Preloader
/**********************************/

.vlt-site-preloader
	display flex
	align-items center
	justify-content center

	position fixed
	top 0
	left 0
	height 100%
	width 100%

	z-index 9999
	background-color $c6
	// &::before
	// 	content ''
	// 	position absolute
	// 	top 50%
	// 	left 50%
	// 	height 1px
	// 	width 1px
	// 	background-color red
	// 	z-index 222

	.signal
		position relative
		display block
		height 60px
		width 60px
		&::before
			content ''
			display block
			position absolute
			top 0
			left 0
			height 100%
			width 100%
			background-color $c0
			border-radius 50%
			animation signal 2s linear infinite

	.wordpress
		height 40px
		width 40px

		border-radius 50%
		background-color $c0
		animation spinOne 1s linear infinite
		&::before
			content ''
			display block
			position absolute
			top 5px
			left 5px
			width 12px
			height 12px

			background-color $c6

			border-radius 12px

	.spinner
		height 40px
		width 40px

		border 3px solid $c8
		border-top-color $c0
		border-radius 50%
		animation spinOne 1s linear infinite

	.double
		$circleOne = 80px
		$circleTwo = 60px

		&::before,
		&::after
			content ''
			display block

			border-radius 50%
			background-color $c6

		&::before
			height 80px
			width 80px

			box-shadow 0px -4px 8px 0px rgba($c0, .08)
			animation spinOne 3s linear infinite

		&::after
			position absolute
			top 50%
			left 50%
			height 60px
			width 60px
			margin-top -(@width/2)
			margin-left -(@width/2)

			box-shadow 0px -4px 8px 0px rgba($c0, .08)
			animation spinTwo 3s linear infinite

@keyframes spinOne
	100%
		transform rotate(360deg)

@keyframes spinTwo
	100%
		transform rotate(-360deg)

@keyframes signal
	from
		transform scale(0, 0)
		opacity 1
	to
		opacity 0
		transform scale(1, 1)
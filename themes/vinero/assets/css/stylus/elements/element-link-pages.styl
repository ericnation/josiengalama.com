/*! Link pages
/**********************************/

.vlt-link-pages
	margin-top 30px
	h5
		position relative
		margin 0 0 25px
		padding-bottom 10px

		text-transform uppercase
		&::before
			content ''
			position absolute
			bottom 0
			left 0
			width 30px
			height 1px
			background-color $c11

	a
		color $c2

	a + a
		margin-left 15px
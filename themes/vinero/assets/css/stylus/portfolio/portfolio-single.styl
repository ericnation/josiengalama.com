/*!*********************************/
/*! Portfolio navigation
/**********************************/

.vlt-portfolio-navigation
	padding 30px 0

	background-color $c6
	border-top 1px solid $c9
	border-bottom 1px solid $c9

	.prev-work,
	.next-work
		text-transform uppercase
		letter-spacing 2px
		font-size 14px

		a:hover
			color $c2

	.prev-work
		i
			margin-right 5px

	.next-work
		i
			margin-left 5px

	a.all-works
		position relative
		display inline-block
		height 16px
		width 16px

		cursor pointer
		transition()
		span
			position absolute
			display block
			height 6px
			width 6px

			color $c0
			background-color currentColor

			transition()

		span:nth-child(1)
			top 0
			left 0

		span:nth-child(2)
			top 0
			right 0

		span:nth-child(3)
			bottom 0
			right 0

		span:nth-child(4)
			bottom 0
			left 0

		&:hover
			span:nth-child(1)
				top -3px
				left -3px

			span:nth-child(2)
				top -3px
				right -3px

			span:nth-child(3)
				bottom -3px
				right -3px

			span:nth-child(4)
				bottom -3px
				left -3px
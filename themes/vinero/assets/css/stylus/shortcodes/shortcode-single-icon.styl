/*!*********************************/
/*! Shortcode: Single Icon
/**********************************/

.vlt-single-icon,
.vlt-icon-link
	display inline-flex
	align-items center
	justify-content center
	height 34px
	width 34px

	font-size 12px
	color $c0

	border-radius 50%
	background-color $c5
	&:hover
		color $c6

		background-color $c0

	& + .vlt-single-icon,
	& + .vlt-icon-link
		margin-left 6px
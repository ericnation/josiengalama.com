/*! Shortcode: Partner logo
/**********************************/

.vlt-partner-logo
	display flex
	align-items center
	justify-content center
	position relative

	transition()

	a
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	&__image
		display block
		text-align center

		img
			flex-shrink 0
			height 100%
			width auto !important
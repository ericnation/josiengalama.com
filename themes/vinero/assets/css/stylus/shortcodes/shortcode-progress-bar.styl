/*!*********************************/
/*! Shortcode: Progress bar
/**********************************/

.vlt-progress-bar

	&__title
		margin 0 0 6px

		font-size 18px
		text-transform uppercase
		letter-spacing 2px
		span
			float right

	&__bar
		position relative
		width 100%
		height 4px

		background-color $c8

		> span
			position absolute
			top 0
			left 0
			height 100%

			background-color $c0

		.vlt-progress-bar__percent
			position absolute
			right 0
			bottom calc(100% + 4px)

			letter-spacing 1px
			color $c0

			opacity 0
			transition()

			&::after
				content '%'

			&.is-visible
				opacity 1
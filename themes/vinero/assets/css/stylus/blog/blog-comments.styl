/*!*********************************/
/*! Comments
/**********************************/

.vlt-comments
	margin-top 50px

.vlt-comments__list + .vlt-comments__reply
	margin-top 50px

/*!*********************************/
/*! Comment list
/**********************************/

.vlt-comments-title
	margin 0

.vlt-comments__list-comments,
.vlt-comments__list-comments .children
	margin 0
	padding 0
	list-style-type none

.vlt-comments__list-comments,
.vlt-comments__list-comments ul.children
	li.vlt-comment-item
		padding 30px 0
		border-top 1px solid $c9

.vlt-comments__list-comments
	> li:first-child
		border-top none
		padding-top 0
	> li:last-child
		padding-bottom 0

.vlt-comments__list-comments ul.children
	margin-top 30px
	padding-left 60px
	> li:last-child
		padding-bottom 0

/*!*********************************/
/*! Comment item
/**********************************/

.vlt-comment-item

	.vlt-comment-left
		display flex
		align-items center
		position relative

		.vlt-comment-avatar
			font-size 0
			img
				border-radius 50%

		.vlt-comment-avatar + .vlt-comment-header
			margin-left 20px

		.vlt-comment-header
			position relative
			width 100%
			h5
				margin 0

				font-size 15px

			a
				color $c10
				font-size 13px

	.vlt-comment-content
		position relative

		.vlt-comment-text
			margin-top 20px

			p:last-of-type
				margin-bottom 0

		&__buttons
			margin 15px 0 0
			padding 0

			list-style-type none

			li
				display inline-block
				margin-right 6px

			a
				display block
				padding 4px 10px

				font-size 12px
				color $c6
				line-height 1

				border-radius 20px
				background-color rgba($c0, 80%)
				&:hover
					background-color $c0

@media (max-width: 767px)
	.vlt-comments__list-comments ul.children
		padding-left 0

/*!*********************************/
/*! Comment reply
/**********************************/

#cancel-comment-reply-link
	margin-left 20px

	font-size 12px

	&::before
		content '\efb8'
		margin-right 5px

		font-family $if

.vlt-comments__list,
.vlt-comments__reply

	.comment-notes,
	.logged-in-as,
	.vlt-comments-number
		margin-bottom 30px

/*!*********************************/
/*! Comment navigation
/**********************************/

.vlt-comments-navigation
	margin-top 20px
	h6
		margin-top 0

	a
		color $c2

	a + a
		margin-left 15px